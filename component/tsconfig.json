{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true, // 生成声明文件
    "declarationDir": "dist/vue", // 声明文件输出目录
    "rootDir": "src/vue", // 源文件目录
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "vue"
    ],
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "examples/react",
    "examples/vue",
    "src/vue",
    "src/react"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}